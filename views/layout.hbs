                            <li>
                                <form action="/search">
                                    <!-- <i class="fas fa-search" style="display: inline; float: left; vertical-align: middle; width: 20%"></i> -->
                                    <input style="display: inline; width: 73%" type="text" name="txtRicerca" id="txtRicerca" value="" placeholder="Ricerca" />
                                    <input style="display: inline" type="submit" value="OK" class="primary" />
                                    <!-- <button style="display: inline; float: right; width: 20%" class="primary" type="submit"><i class="fas fa-search"></i></button> -->
                                </form>
                            </li>
						</ul>
					</nav>

				<!-- Main -->
					<div id="main">
						<div class="inner">
							{{{body}}}	<!-- this is the placeholder for all handlebars partial views -->
                        </div>
                    </div>

				<!-- Footer -->
					<footer id="footer">
						<div class="inner">
                            <h2 id="nome">Manuele Dentello | UniMi</h2>
						</div>
					</footer>
			</div>

        <script src="/javascripts/jquery.min.js"></script>
        <script src="/javascripts//browser.min.js"></script>
        <script src="/javascripts//breakpoints.min.js"></script>
        <script src="/javascripts//util.js"></script>
        <script src="/javascripts//main.js"></script>

	</body>
